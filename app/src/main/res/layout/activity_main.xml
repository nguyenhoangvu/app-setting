<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Interface Language"
            android:textSize="20sp" />

        <TextView
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="English(United States)"
            android:textColor="@color/colorText"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp">

        <TextView
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Privacy Setting"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="359dp"
        android:layout_height="272dp"
        android:layout_marginTop="130dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Open device settings"
            android:textSize="20sp" />

        <TextView
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Editor"
            android:textColor="@color/colorText2"
            android:textSize="18sp" />

        <TextView
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Set editor type"
            android:textSize="20sp" />

        <TextView
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Beta"
            android:textColor="@color/colorText2"
            android:textSize="18sp" />

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Media"
            android:textColor="@color/colorText2"
            android:textSize="18sp" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Optimize Images"
            android:textSize="18sp"
            android:layout_marginLeft="18dp"/>

        <TextView
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Enable to resize and compress pictures"
            android:textColor="@color/colorText2"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="96dp"
        android:layout_marginTop="400dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Maximum Image Size"
            android:textColor="@color/colorText"
            android:textSize="18sp" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="3000px"
            android:textColor="@color/colorText2" />

        <TextView
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Image Quality"
            android:textColor="@color/colorText"
            android:textSize="18sp" />

        <TextView
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:gravity="center"
                android:hint="Medium"
            android:textColor="@color/colorText2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:orientation="vertical">

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Optimize Videos"
            android:textSize="18sp"
            android:layout_marginLeft="18dp"/>

        <TextView
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Enable to resize and compress videos"
            android:textColor="@color/colorText2"
            android:textSize="16sp" />

    </LinearLayout>
</FrameLayout>